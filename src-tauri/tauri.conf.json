{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npx vite build",
        "beforeDevCommand": "npx vite",
        "devPath": "http://localhost:5173",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "AxolotlClient Launcher",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "http": {
                "scope": [ "https://*.mojang.com/*" ]
            },
            "fs": {
                "scope": [ "**" ]
            },
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "io.github.axolotlclient.launcher",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [{
            "fullscreen": false,
            "width": 980,
            "height": 552,
            "resizable": true,
            "title": "AxolotlClient Launcher"
        }]
    }
}